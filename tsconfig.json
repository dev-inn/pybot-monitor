{
    "compilerOptions": {
        "incremental": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "allowJs": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "lib": ["ES2020", "DOM"],
        "resolveJsonModule": true,
        "typeRoots": [
            "types"
        ]
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "/node_modules"

    ]
}
